<% include ../partials/header.ejs %>
<div class="wrapper">
    <% include ../partials/navigation.ejs %>
    <section class="content">
        <% if(status === true){%>
        <div class="alert alert-success"></div>
        <%}%>
        <% if(status === false){%>
        <div class="alert alert-warning"></div>
        <%}%>
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Delete Business Card</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="POST" action="/network/deleteCard/">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="CardName">Select Card :- </label>
                                <select class="form-control" name="card_name" id="card_name">
                                    <option value="Select Card Name">Select Card Name</option>
                                    <%if(card_list.length > 0){%>
        <%for(card of card_list){%>
        <option value="<%= card.card_name%>"><%= card.card_name%></option>
        <%}}else{%>
        <option value="no">No Card Found</option>
        <%}%>
                                </select>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
</div>
</aside>
<!-- /.control-sidebar -->
<!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
<div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->
</div>
<% include ../partials/footer.ejs%>